{
  "name": "base-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "parcel app/assets/index.pug --open",
    "build": "NODE_ENV=production parcel build app/assets/index.pug",
    "lint-check": "prettier --check 'app/**/*.{js,ts,tsx}'",
    "lint": "prettier --write 'app/**/*.{js,ts,tsx}'",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.25",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.7",
    "@types/styled-components": "^4.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "pug": "^2.0.4",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  },
  "alias": {
    "src": "./app/src",
    "assets": "./app/assets"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.storybook/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assets/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/assets/__mocks__/styleMock.js",
      "^app(.*)$": "<rootDir>/src/app$1",
      "^assets(.*)$": "<rootDir>/src/assets$1"
    },
    "setupFiles": [
      "<rootDir>jest/config.js"
    ],
    "setupFilesAfterEnv": [
      "./jest/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
